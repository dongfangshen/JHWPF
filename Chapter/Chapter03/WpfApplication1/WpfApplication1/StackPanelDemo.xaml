<Window x:Class="WpfApplication1.StackPandelDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="StackPandelDemo" Height="300" Width="300">
    <Grid>
        <Border Margin="5" Padding="10" Background="LightYellow" BorderBrush="SteelBlue" BorderThickness="1,5,10,20" CornerRadius="10" VerticalAlignment="Top">
            <StackPanel>
                <Button Margin="3">One</Button>
                <Button Margin="3">Two</Button>
                <Button Margin="3">Three</Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
