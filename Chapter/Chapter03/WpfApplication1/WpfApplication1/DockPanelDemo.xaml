<Window x:Class="WpfApplication1.DockPanelDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="DockPanelDemo" Height="300" Width="300">
    <Grid>
        <DockPanel LastChildFill="True">
            <Button DockPanel.Dock="Top">向上</Button>
            <Button DockPanel.Dock="Top" HorizontalAlignment="Center">水平居中向上</Button>
            <Button DockPanel.Dock="Top" HorizontalAlignment="Left">水平居左向上</Button>
            <Button DockPanel.Dock="Bottom">向下</Button>
            <Button DockPanel.Dock="Left">向左</Button>
            <Button DockPanel.Dock="Right">向右</Button>
            <Button>占满剩余</Button>
        </DockPanel>
    </Grid>
</Window>
